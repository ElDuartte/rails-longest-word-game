<div class="container">
  <h1 class="title-game">New game</h1>
</div>

  <div class="container">
    <% @letters.each do |letter| %>
        <div class="letter"><%= letter %></div>
    <% end %>
  </div>

  <div class="container container-form">
    <form action="/score" class="form-inline" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <label for="user_input_title" class="title-form">What is the longest word you can find?</label><br>
      <input type="text" name="word" class="form-control">
      <input type="submit" value="Play" class="form-control btn btn-primary">
      <%# <div class="input-group-append">
        </div> %>
    </form>
  </div>
</div>
